import java.util.*;
public class Main{ 

    public static void main(String arg[])
    {
        Scanner sc = new Scanner(System.in);
        System.out.println("enter a integer:");
        int n = sc.nextInt();
        int i,j,k=1;
            for (i=1; i<=n; i++)
            {
                for (j=1; j<=i; j++)
                {
                    System.out.print((k++)+" ");
                }
            System.out.println();
        }
}
}
